=render 'payments/card_data'

.card.large-padding
    %table.table.table-striped.table-hover.medium#table-shopping-cart
        %thead.bold.light-blue-text
            %td Producto
            %td Costo
            %td Acciones
        %tbody
            -@shopping_cart.in_shopping_carts.each do |i_sh|
                -product = i_sh.product
                -pricing = (product.pricing).to_s + ".00"
                -pricing_total = pricing.to_f / 100
                %tr{id: "#{product.id}"}
                    %td= product.name
                    %td= pricing_total
                    %td Eliminar
    
    .top-space.large-padding.text-center#payment-form
        %p.medium
            %strong
                Total: $
                =@shopping_cart.total
    
    - if @shopping_cart.total > 0
        .top-space
            = render 'payments/bottons'